# argument to provide specific version of evmos node
ARG INITIAL_VERSION
FROM tharsishq/evmos:$INITIAL_VERSION

RUN apt-get update -y
# jq needs to perform changes of node parameters
RUN apt-get install ca-certificates jq -y

WORKDIR /go/src/github.com/evmos/evmos

COPY ./tests/e2e/upgrade/upgrade-init.sh .

# perms to make upgrade-init.sh executable
RUN chmod +x upgrade-init.sh

EXPOSE 26656 26657 1317 9090 8545 8546

CMD ["sh", "./upgrade-init.sh"]